@model Vidly.Models.Customer
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

 @*action:create , controller: customers*@ 
@*if we wrap the beginform with a using it will return a disposable object which closes the form </form>*@  
@using (Html.BeginForm("Create", "Customers"))
{

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new
   {
       @class = "form-control"

   })
    </div> 
    <div class="form-group">
        @Html.LabelFor(m => m.Birthdate)
     @*   <label for="Birthdate">Date of Birth</label>*@
        @Html.TextBoxFor(m => m.Birthdate, new
   {
       @class = "form-control"

   })
    </div> 
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.IsSubscribedToNewsletter) Subscribed to NewsLetter ?

        </label>
            </div>

}

